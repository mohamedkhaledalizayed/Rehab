<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/favourite_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:numStars="5"
        android:id="@+id/rate_bar"
        app:mrb_fillBackgroundStars="true"
        app:mrb_progressTint="#ffc400"
        android:layout_margin="@dimen/_15sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#a4a4a4"/>

    <smile.khaled.mohamed.rehab.utils.CustomEditText
        foo:customFont="fonts/Cairo-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:id="@+id/note"
        android:layout_margin="@dimen/_15sdp"
        android:inputType="textMultiLine"
        android:background="@drawable/review_edit_text_bg"/>


    <smile.khaled.mohamed.rehab.utils.CustomButton
        foo:customFont="fonts/Cairo-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:background="@drawable/signin_bg_btn"
        android:text="قيم"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/rate_doctor"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        />

</LinearLayout>
</layout>